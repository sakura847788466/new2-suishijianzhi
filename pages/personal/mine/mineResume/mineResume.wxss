/* pages/personal/mine/mineResume/mineResume.wxss */
page{
  background-color: #F2F2F2
}

view{
  background-color: white
}
.mine-header{
  padding: 20rpx 19rpx 2rpx 40rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-right: 21rpx;
  border-radius: 50%;
}

.main_center {
  position: relative;
  height: 34rpx;
  margin-top: 10rpx;
}
.mine-name{
  font-size: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
}
.mine-info{
  color: #999;
  font-size: 24rpx;
  height: 20rpx;
  margin-top: 20rpx;
}
.mine-info text{
  display: inline-block;
  height: 18rpx;
  margin: 0 2rpx;
  border-left: 0.3rpx solid #E5E5E5
}

.mine-header-right{
  width: 140rpx;
  margin-top: 56rpx;
}
.mine-header-bottom{
  margin-top: 20rpx;
}
.mine-header-bottom .mine-phone{
  margin-left: 3rpx;
  margin-right: 16rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #F2F2F2;
  font-size: 28rpx;
  color: #666
}

/* willing... */
.mine-willing{
  margin-top: 20rpx;
  padding: 0 40rpx 1rpx 40rpx;
}
.mine-willing .mine-willing-title{
  color: #333;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.mine-willing-item{
  height: 62rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #666;
  text-indent: 20rpx;
  background-color: #FBFBFB;
  padding-right: 14rpx;
  margin-bottom: 20rpx;
}
.mine-willing-item .mine-time{
  font-size: 28rpx;
  color: #666;
  float: right;
}

/* address... */
.mine-addr{
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
}
.mine-addr .mine-addr-title{
  font-size: 32rpx;
  color: #333;
}

.mine-addr .mine-addr-detail{
  margin-top: 20rpx;
  color: #666
}

/* certification... */
.mine-certification{
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
}
.mine-certification .mine-certification-title{
  font-size: 32rpx;
  color: #333;
}
.pic{
  margin-top: 20rpx;
  padding-left: 33rpx;
}
.mine-pic{
  width: 100%;
  height: 124rpx;
}
.mine-pic-wrapper{
  margin-right: 33rpx;
  width: 124rpx;
  display: inline-block
}
.mine-pic-wrapper text{
  display: block;
  text-align: center;
  color: #666;
  border: 1rpx solid #EDEDED;
  border-radius: 10rpx;
}

.nomore{
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background: none;
}
