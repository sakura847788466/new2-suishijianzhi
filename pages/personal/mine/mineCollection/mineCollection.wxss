/* pages/personal/mine/mineCollection/mineCollection.wxss */
page{
  background-color: white
}
.collect-item{
  padding: 22rpx 40rpx;
  position: relative;
  border-bottom: 1px solid #f2f2f2
}
/* col1 */
.collect-item .row1{
  font-size: 30rpx;
}
.collect-item .row2{
  margin: 20rpx 0;
  color: #666
}
.collect-item .row2 image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 22rpx;
}

.clock{
  width: 35rpx;
  height: 35rpx;
  margin-left: 3.5rpx;
  margin-right: 25rpx;
}
.time{
  color: #666
}

/* col2 */
.nearby{
  margin-left: 20rpx;
  padding: 2px;
  color: #0C71EF;
  font-size: 16rpx;
  border: 1px solid #0C71EF;
  border-radius: 3px;
}
.invalid{
  width: 130rpx;
  height: 120rpx;
  margin-left: 40rpx;
}

/* col3 */
.col3{
  flex: 1;
  text-align: center;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
}
.wage{
  color: #FF2B2B;
  font-size: 30rpx;

}
.distance{
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}