/* pages/personal/mine/mineResumeEdit/mineResumeEdit.wxss */

/* top */
.resume-edit-top{
  background-color: white;
}

.essential-icon{
  color: #FF0000;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.resume-edit-flexbox{
  padding: 19rpx 40rpx 19rpx 22rpx;
}
.flex-right-item{
  flex: 1;
  text-align: right
}
.light-text{
  color: #999;
  font-size: 28rpx;
}
.arrow-right{
  margin-left: 20rpx;
  width: 26rpx;
  height: 26rpx;
}

/* middle */
.resume-edit-mid{
  background-color: white;
  margin-top: 20rpx;
}

/* willing */
.mine-willing{
  margin-top: 20rpx;
  padding: 0 40rpx 1rpx 40rpx;
  background-color: white;
}
.mine-willing .mine-willing-title{
  color: #333;
  font-size: 32rpx;
  padding: 20rpx 0;
}
.mine-add{
  color: #0C71EF;
  font-size: 32rpx;
  text-align: right
}

.mine-willing-item{
  height: 62rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #FBFBFB;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.mine-willing-item .mine-time:first-child{

}
.mine-willing-item .mine-delete{
  text-align: right
}
.mine-job{
  display: inline-block;
  width: 280rpx;
}
.dustbin{
  width: 33rpx;
  height: 33rpx;
}

/* certification... */
.mine-certification{
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  background-color: white
}
.pic{
  margin-top: 20rpx;
  padding-left: 33rpx;
}
.mine-pic{
  width: 100%;
  height: 124rpx;
}
.mine-pic-wrapper{
  margin-right: 33rpx;
  width: 124rpx;
  display: inline-block
}
.mine-pic-wrapper text{
  display: block;
  text-align: center;
  color: #666;
  border: 1rpx solid #EDEDED;
  border-radius: 10rpx;
}

/* save btn */
.mine-save{
  margin-top: 60rpx;
  margin-bottom: 87rpx;
  text-align: center
}

.mine-save .mine-save-btn{
  width: 600rpx;
  height: 88rpx;
  font-size: 36rpx;
  color: white;
  background-color: #0C71EF;
  border-radius: 10rpx;
}

.input-name{
  color: #333
}