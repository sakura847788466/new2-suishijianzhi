.container{
  padding-top:90rpx;
  padding-bottom:98rpx;
}
.msg-top{
  position:fixed;
  top:0;
  left:0;
  right:0;
  height:90rpx;
  background:#fff;
}
.msg-classify.active .msg-classify-inner:after{
  position:absolute;
  content:'';
  display:block;
  width:160rpx;
  height:5rpx;
  background:#0C71EF;
  bottom:0;
  left:50%;
  margin-left:-75rpx;
  border-radius:8rpx;
}
.classify-text.active{
  /* font-size:30rpx; */
  font-weight:bold;
  color:#333;
}
.classify-text.active::after{
  display:block;
  content:'';
  position:absolute;
  left:50%;
  bottom:0;
  width:64rpx;
  height:5rpx;
  margin-left:-32rpx;
  background:#0C71EF;
  border-radius:8rpx;
}

.hidden{
  display: none;
}
.show{
  display:block;
}
.msg-classify-inner{
  position:relative;
  height:100%;
}
.msg-img-box{
  position:relative;
  width:50rpx;
  height:50rpx;
  margin-right:10rpx;
}
.msg-img-box .dot{
  position:absolute;
  top:0;
  right:0rpx;
  width:12rpx;
  height:12rpx;
  font-size:0;
  line-height:0;
  background:#FF3131;
  border-radius:100%;
}
.msg-classify-text{
  font-size:28rpx;
  color:#333;
}

.msg-wrap{
  padding:25rpx 40rpx;
}
.msg-item{
  margin-bottom:25rpx;
}
.msg-time{
  font-size:24rpx;
  color:#999;
  background:#E2E2E2;
  padding:5rpx 20rpx;
  margin:0 auto;
  border-radius:30rpx;
  margin-bottom:25rpx;
}
.msg-content{
  background:#fff;
  border-radius:8rpx;
}
.msg-title{
  font-size:28rpx;
  color:#333;
  border-bottom:1px solid #f2f2f2;
  padding:15rpx 20rpx;
}
.msg-con{
  position:relative;
  padding:20rpx 30rpx;
}
.msg-con-main,.msg-con-main2{
  font-size:28rpx;
  color:#666;
}
.msg-con-main{
  line-height:1.5;
}
.msg-con-main2{
  line-height:1.8;  
}
.msg-con-main2 .font{
  font-size:24rpx;
  line-height:1.5;
  padding-top:5rpx;
}
.msg-btn{
  float:right;
  font-size:24rpx;
  line-height:1;
  color:#FF3131;
  background:#fff;
  padding:10rpx 20rpx;
  border:1px solid #FF3131;
  border-radius:30rpx;
  margin-top:10rpx;
  margin-bottom:25rpx;
}
.msg-tip{
  font-size:21rpx;
  color:#FF3131;
  padding-top:20rpx;
}