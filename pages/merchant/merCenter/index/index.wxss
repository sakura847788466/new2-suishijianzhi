@import '/common/style/mine-menu.wxss';
.top{
  position:relative;
  height:300rpx;
  background:#fff;
}
.top-bg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:300rpx;
}
.top-logo{
  position:absolute;
  height:50px;
  width:50px;  
  top:25rpx;
  left:50%;
  margin-left:-25px;
}
.top-info{
  position:absolute;
  top:150rpx;
  line-height:1;
  color:#fff;
  text-align:center;
}
.info-name{
  font-size:32rpx;
}
.info-phone{
  font-size:28rpx;
  padding-top:30rpx;
}

