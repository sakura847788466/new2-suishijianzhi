
.con{
  background:#fff;
  margin-bottom:20rpx;
}
.con-item{
  padding:20rpx 30rpx;
  border-bottom:1px solid #f2f2f2;
}
.con-text{
  min-width:130rpx;
  font-size:32rpx;
  line-height:60rpx;
  color:#333;
}
.con-info{
  font-size:28rpx;
  color:#999;
  text-align:right;
}
.con-info2{
  color:#333;
}
.con-info3{
  font-size:26rpx;
  color:#999;
  padding-left:15rpx;
}
.to-img{
  width:30rpx;
  height:30rpx;
}
.head-img{
  width: 112rpx;
  height: 112rpx;
  margin-right:10rpx;
  border-radius:100%;
}
.img-box{
  padding:25rpx 0 25rpx 30rpx;
}
.img-item{
  position:relative;
  width:150rpx;
  height:150rpx;
  margin-right:25rpx;
}
.img-item icon{
  position:absolute;
  top:-12rpx;
  right:-12rpx;
}