/* components/modal.wxss */

.modal {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
}

.modal-content {
  width: 80%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  overflow: hidden;
  color: #888;
  margin-left: 10%;
  margin-top: 200rpx;
  min-height: 300rpx;
  background: #fff;
  border-radius: 20rpx;
}

.modal-top {
  text-align: center;
  padding: 40rpx 20rpx 20rpx;
}

.modal-top view {
  font-size: 34rpx;
}

.modal-body {
  padding: 20rpx 60rpx;
  min-height: 100rpx;
  color: #888;
  text-align: center;
  font-size: 30rpx;
}

.modal-footer {
  border-top: 1px solid #f2f2f2;
  width: 100%;
  display: flex;
}

.cancle, .sure {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}

.sure {
  border-left: 1px solid #f2f2f2;
}

.modal-footer text:last-child {
  color: #108ee9;
}
