.city_box {
  height: 100%;
  background: #fff;
  display: flex;
}

.city_left {
  flex: 1;
}

.city_right {
  width: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow-y:visible;
}

.letter_item {
  flex: 1;
  height: 50rpx;
  display: block;
  font-size: 30rpx;
  color: #33b9ff;
  text-align: center;
}

.city_locate, .national, .new_city_title ,.city_first_letter{
  display: flex;
  align-items: center;
  background-color: white;
  padding-left: 30rpx;
}

.city_locate, .new_city_title,.city_first_letter {
  height: 80rpx;
  background-color: #f2f2f2;
}

.national text, .new_city_text {
  background: #f2f2f2;
  width: 200rpx;
  display: block;
  text-align: center;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
}
.national text{
  margin: 20rpx 0;
}

.new_city {
  font-size: 28rpx;
  background: white;
}

.new_city_box {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx;
  justify-content: space-between;
}

.city_name {
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;  
  border-bottom: 1px solid #efefef;
}
